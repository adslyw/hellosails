<div class="container">
	<form accept-charset="UTF-8" action="/signup" class="form-signin" id="new_user" method="post" role="form">
	  <div class="form-group">
	    <label for="user_email">注册邮箱</label>
	    <input class="form-control" id="user_email" name="user[email]" size="30" required="" type="email" />
	  </div>
	  <div class="form-group">
	    <label for="user_password">注册密码</label>
	    <input class="form-control" id="user_password" name="user[password]" size="30" type="password" />
	  </div>
	  <div class="form-group">
	    <input class="btn btn-default btn-danger" name="commit" type="submit" value="申请注册" />
	  </div>
	</form>
</div>
