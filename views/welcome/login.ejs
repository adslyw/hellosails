<div class="container">
  <form accept-charset="UTF-8" action="/signin" class="form-signin" id="new_user" method="post" role="form">
	  <div class="form-group">
	    <input class="form-control" id="user_email" name="user[email]" size="30" placeholder="注册邮箱" required="" type="email" />
	  </div>
	  <div class="form-group">
	    <input class="form-control" id="user_password" name="user[password]" size="30" placeholder="帐号密码" type="password" />
	  </div>
	  <div class="form-group">
	    <input class="btn btn-default btn-info" name="commit" type="submit" value="登录" />
	  </div>
	  <a href='/signup'>还没有帐号？</a>
  </form>
</div>