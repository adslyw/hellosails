<!DOCTYPE html>
<html>
  <head>

    <title><%- title %></title>

    <!-- Viewport mobile tag for sensible mobile support -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <!--STYLES-->
    <link rel="stylesheet" href="/linker/css/bootstrap.css">
    <link rel="stylesheet" href="/linker/css/font-awesome.css">
    <link rel="stylesheet" href="/linker/css/font-awesome.min.css">
    <link rel="stylesheet" href="/linker/css/loginform.css">
    <link rel="stylesheet" href="/linker/css/menu.css">
    <link rel="stylesheet" href="/linker/css/style.css">
    <!--STYLES END-->
    </head>

  <body>
    <!--SCRIPTS-->
    <script src="/linker/js/jquery.min.js"></script>
    <script src="/linker/js/highcharts.js"></script>
    <script src="/linker/js/bootstrap.min.js"></script>
    <script src="/linker/js/jquery.metisMenu.js"></script>
    <!--SCRIPTS END-->
    <!-- Include the view file for the current controller/route -->

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="col-lg-2">    
        <ul class="nav navbar-nav">
          <a class="navbar-brand" href="/">Adslyw</a>
        </ul>
      </div>
      <div class="col-lg-8"> 
 
      </div>
      <div class="col-lg-2"> 
         <ul class="nav navbar-nav navbar-left">
          <li>
          <% if(session.user == null){ %>
          <a href="/login">
            <span class="glyphicon glyphicon-log-in"></span> 
            登录 
          </a>
          <% }else{ %>
          <a href="/logout">
            <span class="glyphicon glyphicon-log-out"></span> 
            离开 
          </a>              
          <% } %>
          </li>
        </ul>  
      </div>
    </nav>
    <div> 
    <% if(session.user != null){ %>   
    <div class="col-md-2">
      <%- partial('partials/menu') %>
    </div>
    <div class="col-md-8">
      <%- body %>
    </div>
    <div class="col-md-2"> 
      <% _.each(_.pairs(req.flash()),function(item){ %>
        <div class="alert alert-<%= item[0] %> alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= item[1] %>
        </div>
      <% }); %>     
    </div>
    <% }else{ %>
      <%- body %>       
    <% } %>
    <!-- Bring in the socket.io client -->
    <script type="text/javascript" src="/js/socket.io.js"></script>
    <!-- then beef it up with some convenience logic for talking to Sails.js -->
    <script type="text/javascript" src="/js/sails.io.js"></script>
    <!-- listen on socket.io for incoming messages -->
    <script type="text/javascript" src="/js/app.js"></script>
  </body>
</html>
